<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	id="WebApp_ID" version="2.5">
	<display-name>JavaEE_WEB_VendingMachine</display-name>
	<servlet>
		<servlet-name>action</servlet-name>
		<!--Request 交由 Struts ActionServlet處理 -->
		<servlet-class>org.apache.struts.action.ActionServlet</servlet-class>
		<init-param>
			<param-name>GoodsImgPath</param-name>
			<param-value>/DrinksImage</param-value>
		</init-param>
		<init-param>
			<param-name>config</param-name>
			<param-value>/WEB-INF/struts-config.xml</param-value>
		</init-param>
		<load-on-startup>0</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>action</servlet-name>
		<!--所有 URL網址結尾是 xxx.do 的都交由 struts 服務 -->
		<url-pattern>*.do</url-pattern>
	</servlet-mapping>
	<filter>
		<filter-name>CharacterEncodingFilter</filter-name>
		<filter-class>com.training.filter.CharacterEncodingFilter</filter-class>
	</filter>
	<!-- UTF8亂碼solution 過濾所有請求 -->
	<filter-mapping>
		<filter-name>CharacterEncodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<filter>
		<filter-name>LoginCheckFilter</filter-name>
		<filter-class>com.training.filter.LoginCheckFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>LoginCheckFilter</filter-name>
		<!-- 只過濾struts請求 -->
		<url-pattern>*.do</url-pattern>
	</filter-mapping>
	<session-config>
    	<session-timeout>30</session-timeout>
    </session-config>
</web-app>